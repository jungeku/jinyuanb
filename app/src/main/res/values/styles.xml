<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/public_orange</item>
        <item name="colorPrimaryDark">@color/public_orange</item>
        <item name="colorAccent">@color/public_orange</item>
    </style>


    <!--反馈类型-->
    <style name="main_tab_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28px</item>
        <item name="android:background">@drawable/selector_feedback_type_border</item>
        <item name="android:textColor">@color/selector_feedback_type</item>
    </style>
    <!--主页期限边框-->
    <style name="home_item">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40px</item>
        <item name="android:background">@drawable/shape_right1</item>//shape_code_border
        <item name="android:textColor">@color/public_orange</item>
    </style>
    <style name="home_item1">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30px</item>
        <item name="android:background">@drawable/shape_right1</item>//shape_code_border
        <item name="android:textColor">@color/public_orange</item>
    </style>

    <!--密码框-->
    <style name="pwd_item">
        <item name="android:layout_width">80px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30px</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/shape_edittext_border</item>
        <item name="android:textColor">@color/color333333</item>
    </style>

    <style name="bottom_select_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item><!-- 是否漂现在activity上 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!--自动更新弹框-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:spacing">350dp</item>
    </style>
    <style name="dilog_header">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:text">版本更新提示</item>
        <item name="android:background">#e6e6fa</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme_AudioDialog" parent="@android:style/Theme.Dialog" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>
    <!--圆形头像-->
    <declare-styleable name="CircleImageview">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

</resources>
