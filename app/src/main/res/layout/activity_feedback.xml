<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sk.xjwd.minehome.activity.FeedbackActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:padding="20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color333333"
                android:textSize="30px"
                android:text="反馈类型:"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_suggest"
                        style="@style/main_tab_item"
                        android:checked="true"
                        android:layout_marginLeft="10px"
                        android:text="建议" />
                    <RadioButton
                        android:id="@+id/rb_renzheng"
                        style="@style/main_tab_item"
                        android:layout_marginLeft="10px"
                        android:text="认证"/>

                    <RadioButton
                        android:id="@+id/rb_jiekuan"
                        style="@style/main_tab_item"
                        android:layout_marginLeft="10px"
                        android:text="借款" />
                    <RadioButton
                        android:id="@+id/rb_huankuan"
                        style="@style/main_tab_item"
                        android:layout_marginLeft="10px"
                        android:text="还款" />
                    <!--<RadioButton
                        android:id="@+id/rb_tiyan"
                        style="@style/main_tab_item"
                        android:layout_marginLeft="10px"
                        android:text="体验与界面" />
                    <RadioButton
                        android:id="@+id/rb_other"
                        style="@style/main_tab_item"
                        android:layout_marginLeft="10px"
                        android:text="其他" />-->
                </RadioGroup>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginTop="20px"
            android:orientation="vertical">
            <EditText
                android:id="@+id/ed_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请写下您宝贵的意见，您的声音是我们前进的动力（200字以内）"
                android:textColor="@color/color333333"
                android:textColorHint="@color/color999999"
                android:lineSpacingExtra="15px"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:maxLength="200"
                android:gravity="left|top"
                android:layout_margin="20px"
                android:textSize="30px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_feedback_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:layout_margin="20dp"
                    android:textSize="24px"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <com.sk.xjwd.view.ChoosePhotoRV
                android:id="@+id/choosephonto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:background="@color/colorWhite"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_feedback_commit"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@drawable/shape_home_btn_border"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="80px"
            android:textSize="34px"
            android:textColor="@color/colorWhite"
            android:text="告知我们"/>
    </LinearLayout>
    </ScrollView>
</layout>
