<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sk.xjwd.minehome.activity.UpdateBankActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginTop="20px"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="姓名"/>
                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:layout_marginLeft="200px"
                    android:textSize="30px"
                    android:hint="请输入姓名"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_right"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="身份证"/>
                <EditText
                    android:id="@+id/ed_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:layout_marginLeft="200px"
                    android:textSize="30px"
                    android:hint="请输入18位身份证号码"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_right"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="储蓄卡"/>
                <EditText
                    android:id="@+id/ed_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:layout_marginLeft="200px"
                    android:textSize="30px"
                    android:hint="请输入银行卡号"
                    android:phoneNumber="true"/>
                <!--<ImageView-->
                    <!--android:id="@+id/img_chuxuka_shibie"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="30px"-->
                    <!--android:src="@mipmap/chuxuka_shibie"/>-->
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_bankcard"
                android:layout_width="match_parent"
                android:layout_height="98px">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="200px"
                    android:background="@color/public_line_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="所属银行"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_bankcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200px"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/nongyeyinhang"/>
                <TextView
                    android:id="@+id/txt_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="200px"
                    android:textSize="26px"

                    android:text=""/>
            </RelativeLayout>
            <include layout="@layout/layout_line"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_zhici_bankcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/public_orange"
            android:layout_gravity="right"
            android:layout_margin="30px"
            android:drawableLeft="@mipmap/tishi"
            android:drawablePadding="10px"
            android:visibility="visible"
            android:textSize="30px"
            android:text="支持银行"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="预留手机号"/>
                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColorHint="@color/color999999"
                    android:textColor="@color/color333333"
                    android:layout_marginLeft="200px"
                    android:textSize="30px"
                    android:hint="请输入手机号码"/>
            </RelativeLayout>

            <include layout="@layout/layout_line"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_update_bankcard"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@drawable/shape_home_btn_border"
            style="?android:attr/borderlessButtonStyle"
            android:layout_margin="30px"
            android:textSize="34px"
            android:textColor="@color/colorWhite"
            android:text="提交"/>

    </LinearLayout>
</layout>
