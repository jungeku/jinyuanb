<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sk.smallloan.account.activity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_bg">


            <ImageView
                android:id="@+id/img_reg_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_back"
                android:layout_marginTop="40px"
                android:layout_marginLeft="30px"/>

            <TextView
                android:id="@+id/reg_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="30px"
                android:layout_marginTop="40px"
                android:textColor="@color/color_white"
                android:layout_centerHorizontal="true"/>
           <!-- <TextView
                android:id="@+id/reg_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="30px"
                android:layout_marginTop="40px"
                android:textColor="@color/color_white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>-->
        </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="#ff333333"
                android:layout_marginLeft="20dp"
                android:textSize="28px"/>
            <EditText
                android:id="@+id/ed_register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28px"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColorHint="#c3c3c3"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:maxLength="11"
                android:inputType="phone"
                />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/public_line_color">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_register_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28px"
                android:hint="验证码"
                android:textColorHint="#c3c3c3"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@null"
                android:maxLength="6"
                android:inputType="phone"/>
            <Button
                android:id="@+id/btn_getcode"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:background="@drawable/shape_home_btn_border"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/color_white"
                android:textSize="25px"
                android:text="获取验证码"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/public_line_color">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:background="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_register_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28px"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="#c3c3c3"
                android:inputType="textPassword"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:maxLength="12" />
            <ImageView
                android:id="@+id/img_reg_showpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hide_pwd"
                android:layout_marginRight="5dp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/public_line_color">

        </View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="密码区分大小写，建议使用6位以上数字、字母组合"
            android:textColor="#ffb3b3b3"
            android:textSize="24px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_register_pwd_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28px"
                android:background="@null"
                android:hint="确认密码"
                android:textColorHint="#c3c3c3"
                android:inputType="textPassword"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:maxLength="12" />
            <ImageView
                android:id="@+id/img_reg_showpwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hide_pwd"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/public_line_color">

        </View>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@drawable/shape_home_btn_border"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@+id/ll_account"
            android:layout_marginTop="40px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:textSize="30px"
            android:textColor="@color/colorWhite"
            android:text="立即注册"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ch_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击上方按钮即表示同意"
                android:drawablePadding="5px"
                android:textSize="28px"
                android:textColor="@color/color666666"
                android:background="@null"/>
            <TextView
                android:id="@+id/txt_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/public_orange"
                android:textSize="28px"
                android:text="《用户注册协议》"/>
        </LinearLayout>

    </LinearLayout>
</layout>
