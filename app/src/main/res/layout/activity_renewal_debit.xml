<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sk.xjwd.minehome.activity.RenewalDebitActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_delay_show"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/examine">

            <TextView
                android:id="@+id/txt_renewal_debit_delay_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:textSize="26px"
                android:textColor="#ffffffff"
                android:drawableLeft="@mipmap/information_hints"
                android:text="已逾期1天，请及时还款"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="应还金额(元)"
                android:layout_marginTop="10px"
                android:textColor="#ff333333"
                android:layout_marginLeft="20dp"
                android:textSize="30px"/>

            <TextView
                android:layout_marginTop="10px"
                android:id="@+id/renewal_debit_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1002.50"
                android:layout_marginRight="20dp"
                android:textColor="#ffed3d25"
                android:textSize="30px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff333333"
                android:textSize="30px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/public_gb_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_margin="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:drawableLeft="@mipmap/pay_card"
                    android:drawablePadding="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡支付"
                    android:textColor="#ff333333"
                    android:textSize="26px"/>

                <CheckBox
                    android:id="@+id/check_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/selector_radiobutton"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:drawableLeft="@mipmap/pay_zhifubao"
                    android:drawablePadding="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textColor="#ff333333"
                    android:textSize="26px"/>

                <CheckBox
                    android:id="@+id/check_zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@null"
                    android:checked="false"
                    android:background="@drawable/selector_radiobutton"/>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_renewal_debit_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginTop="20px"
            android:padding="30px">
            <TextView
                android:id="@+id/txt_kou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color333333"
                android:textSize="30px"
                android:text="优惠券"/>
            <TextView
                android:id="@+id/txt_use_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/youjiantou"
                android:textColor="#B3B3B3"
                android:layout_alignParentRight="true"
                android:textSize="30px"
                android:text="未使用"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_renewal_ok"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@drawable/shape_home_btn_border"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="50px"
            android:textSize="34px"
            android:textColor="@color/colorWhite"
            android:text="确认还款"/>
    </LinearLayout>
</layout>
