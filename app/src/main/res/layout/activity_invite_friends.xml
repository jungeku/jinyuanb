<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sk.xjwd.minehome.activity.InviteFriendsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:src="@mipmap/banner"
               android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/txt_leiji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:layout_centerVertical="true"
                    android:textSize="30px"
                    android:text="累积奖励"/>
                <TextView
                    android:id="@+id/txt_leiji_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/public_orange"
                    android:layout_toRightOf="@+id/txt_leiji"
                    android:layout_marginLeft="10px"
                    android:layout_centerVertical="true"
                    android:textSize="30px"
                    android:text="0元"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:layout_toLeftOf="@+id/txt_invite_num"
                    android:layout_marginRight="10px"
                    android:layout_centerVertical="true"
                    android:text="已邀请朋友"/>
                <TextView
                    android:id="@+id/txt_invite_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/public_orange"
                    android:textSize="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0人"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/tongbi_tubiao"
                    android:drawableRight="@mipmap/tongbi_tubiao"
                    android:drawablePadding="10px"
                    android:textSize="30px"
                    android:text="邀请奖励"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color999999"
                    android:textSize="28px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="邀请规则"/>
            </RelativeLayout>
            <com.example.xrecyclerview.XRecyclerView
                android:id="@+id/xRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </com.example.xrecyclerview.XRecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_invite_friends"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@drawable/shape_home_btn_border"
                style="?android:attr/borderlessButtonStyle"
                android:layout_margin="20px"
                android:textSize="34px"
                android:textColor="@color/colorWhite"
                android:text="邀请好友"/>
        </LinearLayout>
    </LinearLayout>

</layout>
