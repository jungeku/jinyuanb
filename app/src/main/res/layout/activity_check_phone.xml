<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sk.xjwd.minehome.activity.CheckPhoneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingTop="30px"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:textSize="30px"
                    android:textColor="@color/color333333"/>
                <Button
                    android:id="@+id/btn_check_phone_code"
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:background="@drawable/shape_code_border"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginRight="20px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:textColor="@color/public_orange"
                    android:textSize="25px"
                    android:text="获取验证码"/>
            </LinearLayout>
            <include layout="@layout/layout_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color999999"
                android:textSize="30px"
                android:layout_marginTop="20px"
                android:text="验证码"/>

            <com.sk.xjwd.view.pwd.PswText
                android:id="@+id/pt_code"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="30px"
                android:layout_marginBottom="60px"
                app:pswLength="4"
                app:clearTextPsw="true"
                app:inputBorder_color="@color/public_orange"
                app:borderColor="@color/public_orange"
                app:pswColor="@color/public_orange"
                app:isDrawBorderImg="false"/>
