<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_step4"
                android:layout_width="40px"
                android:layout_height="40px"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/step_moreren"/>
            <ImageView
                android:id="@+id/img_step_xian3"
                android:layout_width="4px"
                android:layout_height="90px"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@mipmap/step_xian_moren"
           />
            <ImageView
                android:id="@+id/img_step3"
                android:layout_width="40px"
                android:layout_height="40px"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/step_moreren"/>
            <ImageView
                android:id="@+id/img_step_xian2"
                android:layout_width="4px"
                android:layout_height="90px"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@mipmap/step_xian_moren"/>
            <ImageView
                android:id="@+id/img_step2"
                android:layout_width="40px"
                android:layout_height="40px"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/step_moreren"/>
            <ImageView
                android:id="@+id/img_step_xian1"
                android:layout_width="4px"
                android:layout_height="90px"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@mipmap/step_xian_moren"/>
            <ImageView
                android:id="@+id/img_step1"
                android:layout_width="40px"
                android:layout_height="40px"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/step_moreren"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_step4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
                <TextView
                    android:id="@+id/txt_huan_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:text="已还款"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_huan_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color999999"
                android:textSize="28px"
                android:layout_marginTop="15px"
                android:text="我们已经收到您的还款"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:text="打款到账"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_bankname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color999999"
                android:textSize="28px"
                android:layout_marginTop="15px"
                android:text="打款至农业银行(9168)"/>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll_step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">
                <TextView
                    android:id="@+id/txt_pass_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:text="审核通过"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_pass_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color999999"
                android:textSize="28px"
                android:layout_marginTop="15px"
                android:text="恭喜您通过风控审核"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">
                <TextView
                    android:id="@+id/txt_step1_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:text="申请提交成功"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_apply_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color999999"
                android:textSize="28px"
                android:layout_marginTop="15px"
                android:layout_marginBottom="30px"
                android:text="我们已收到您的借款申请"/>
        </LinearLayout>
    </LinearLayout>
</layout>
