<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sk.xjwd.mainhome.fragment.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

            <include
                android:visibility="gone"
                android:background="@color/colorWhite"
                android:id="@+id/layout_loan_success"
                layout="@layout/layout_loan_success"
                />
            <include
                android:visibility="gone"
                android:id="@+id/layout_loan"
                layout="@layout/layout_loan"/>
        <include
            android:visibility="gone"
            android:id="@+id/layout_loan_fangkuanzhong"
            layout="@layout/layout_loan_fangkuanzhong"/>




    </LinearLayout>
    </ScrollView>
</layout>
