<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333333"
            android:textSize="34px"
            android:layout_margin="30px"
            android:text="借款编号：201702218882"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/public_line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:textSize="30px"
                    android:text="申请时间"/>
                <TextView
                    android:id="@+id/txt_apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:layout_alignParentRight="true"
                    android:textSize="30px"
                    android:text="2017-06-17"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:textSize="30px"
                    android:text="借款金额"/>
                <TextView
                    android:id="@+id/txt_loan_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:layout_alignParentRight="true"
                    android:textSize="30px"
                    android:text="1000.00元"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:textSize="30px"
                    android:text="借款期限"/>
                <TextView
                    android:id="@+id/txt_loan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:layout_alignParentRight="true"
                    android:textSize="30px"
                    android:text="7天"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:textSize="30px"
                    android:text="到账金额"/>
                <TextView
                    android:id="@+id/txt_daozhang_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:layout_alignParentRight="true"
                    android:textSize="30px"
                    android:text="900.00元"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:textSize="30px"
                    android:text="到账银行卡"/>
                <TextView
                    android:id="@+id/txt_daozhang_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:layout_alignParentRight="true"
                    android:textSize="30px"
                    android:text="农业银行(****7834)"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:textSize="30px"
                    android:text="利率"/>
                <TextView
                    android:id="@+id/txt_lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color666666"
                    android:layout_alignParentRight="true"
                    android:textSize="30px"
                    android:text="0.60%"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
