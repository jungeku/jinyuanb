<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".minehome.activity.UpdatePasswordActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/color_white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_updatepsw_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color333333"
                android:layout_margin="30px"
                android:textSize="30px"
                android:text="1512345678"/>
          <!--  <ImageView
                android:id="@+id/img_updatepsw_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/clear"/>-->
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/ed_uppdatepsw_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="@null"
                android:textSize="28px"
                android:layout_centerVertical="true"
                android:textColorHint="@color/color999999"
                android:textColor="@color/color333333"
                android:hint="验证码"/>
            <TextView
                android:id="@+id/txt_updatepsw_code"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_margin="30px"
                android:background="@drawable/shape_home_btn_border"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/color_white"
                android:text="获取验证码"
                android:textSize="28px"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@color/color_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_updatepsw_newpsw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:textSize="28px"
            android:background="@null"
            android:textColorHint="@color/color999999"
            android:inputType="textPassword"
            android:textColor="@color/color333333"
            android:hint="新密码"/>

        <EditText
            android:id="@+id/ed_updatepsw_newpsw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:background="@null"
            android:textSize="28px"
            android:inputType="textPassword"
            android:textColorHint="@color/color999999"
            android:textColor="@color/color333333"
            android:hint="确认新密码"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_updatepsw_summit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_home_btn_border"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/color_white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40px"
        android:text="确定"
        android:textSize="28px"/>
</LinearLayout>
</layout>