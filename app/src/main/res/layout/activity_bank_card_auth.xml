<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sk.xjwd.authenhome.activity.BankCardAuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:text="请先绑定账户本人的储蓄卡"
            android:textSize="24px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_border"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="储蓄卡"
                    android:textColor="@color/color333333"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/ed_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="200px"
                    android:background="@null"
                    android:hint="请输入银行卡号"
                    android:maxLength="20"
                    android:phoneNumber="true"
                    android:textColor="@color/color333333"
                    android:textColorHint="@color/color999999"
                    android:textSize="30px" />

                <ImageView
                    android:id="@+id/img_chuxuka_shibie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bankcard"
                android:layout_width="match_parent"
                android:layout_height="98px">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="200px"
                    android:background="@color/public_line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="所属银行"
                    android:textColor="@color/color333333"
                    android:textSize="30px" />

                <ImageView
                    android:id="@+id/img_bankcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="200px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="200px"
                    android:text=""
                    android:textColor="@color/color333333"
                    android:textSize="26px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="200px"
                android:background="@color/public_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="姓名"
                    android:textColor="@color/color333333"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="200px"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:maxLength="12"
                    android:textColor="@color/color333333"
                    android:textColorHint="@color/color999999"
                    android:textSize="30px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="200px"
                android:background="@color/public_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="身份证"
                    android:textColor="@color/color333333"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/ed_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="200px"
                    android:background="@null"
                    android:hint="请输入18位身份证号码"
                    android:maxLength="18"
                    android:textColor="@color/color333333"
                    android:textColorHint="@color/color999999"
                    android:textSize="30px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="200px"
                android:background="@color/public_line_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="200px"
                android:background="@color/public_line_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_zhici_bankcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="30px"
            android:drawablePadding="10px"
            android:text="支持银行"
            android:textColor="@color/public_orange"
            android:textSize="30px"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/shape_border"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="98px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="预留手机号"
                    android:textColor="@color/color333333"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="200px"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/color333333"
                    android:textColorHint="@color/color999999"
                    android:textSize="30px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_code"
                android:layout_width="match_parent"
                android:layout_height="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="验证码"
                    android:textColor="@color/color333333"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="210px"
                    android:background="@null"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/color333333"
                    android:textColorHint="@color/color999999"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/checkcoed_line"
                    android:layout_width="1dp"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/ed_code"
                    android:background="#e5e5e5" />

                <TextView
                    android:id="@+id/btn_bankcard_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/checkcoed_line"
                    android:text="获取验证码"
                    android:textColor="@color/public_red"
                    android:textSize="25px" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="120px"
            android:visibility="gone"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/selector_radiobutton"
                android:drawablePadding="5px"
                android:text="已阅读同意"
                android:textColor="@color/color666666"
                android:textSize="28px" />

            <TextView
                android:id="@+id/card_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《授权服务协议》"
                android:textColor="@color/public_orange"
                android:textSize="28px" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_sumbit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_margin="30px"
            android:background="@drawable/shape_home_btn_border"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:textSize="30px" />

    </LinearLayout>
</layout>
