<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sk.xjwd.account.activity.ForgetPwdActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_gb_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:background="@color/colorWhite"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <EditText
                android:id="@+id/ed_forget_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="28px"
                android:hint="请输入您的手机号码"
                android:textColorHint="#c3c3c3"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginLeft="20px"
                android:background="@null"
                android:phoneNumber="true"
                android:maxLength="11"/>
        </LinearLayout>
        <include layout="@layout/layout_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_forget_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="28px"
                android:hint="请输入验证码"
                android:textColorHint="#c3c3c3"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginLeft="20px"
                android:background="@null"
                android:phoneNumber="true"
                android:maxLength="6"
                />
            <Button
                android:id="@+id/btn_forget_code"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:background="@drawable/shape_code_border"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginRight="20px"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:textColor="@color/public_orange"
                android:textSize="25px"
                android:text="获取验证码"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:background="@color/colorWhite"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <EditText
                android:id="@+id/ed_forget_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="28px"
                android:background="@null"
                android:hint="请输入新密码"
                android:textColorHint="#c3c3c3"
                android:inputType="textPassword"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginLeft="20px"
                android:maxLength="12"/>
        </LinearLayout>
        <include layout="@layout/layout_line_inner"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <EditText
                android:id="@+id/ed_forget_ok_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="28px"
                android:background="@null"
                android:hint="请确认密码"
                android:textColorHint="#c3c3c3"
                android:inputType="textPassword"
                android:textColor="@color/color666666"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_marginLeft="20px"
                android:maxLength="12"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_find_pwd"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@drawable/shape_home_btn_border"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@+id/ll_account"
            android:layout_marginTop="40px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:textSize="30px"
            android:textColor="@color/colorWhite"
            android:text="确认找回"/>
    </LinearLayout>
</layout>
