<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/home_loan_result_head"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@mipmap/loan_checking_bg"
        android:padding="30px"
        >

        <ImageView
            android:id="@+id/img_loan_result_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:src="@mipmap/loan_checking"/>

        <TextView
            android:layout_below="@+id/img_loan_result_checking"
            android:id="@+id/txt_loan_result_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:textColor="#ffffffff"
            android:text="审核中"
            android:textSize="36px"/>




    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/home_loan_result_head"
        android:id="@+id/ll_loan_result_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_loan_result_step2"
                android:layout_width="40px"
                android:layout_height="40px"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/loan_point_red"/>
            <ImageView
                android:id="@+id/img_loan_result_xian1"
                android:layout_width="4px"
                android:layout_height="90px"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@mipmap/step_xian_moren"/>
            <ImageView
                android:id="@+id/img_loan_result_step1"
                android:layout_width="40px"
                android:layout_height="40px"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/loan_point_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout

                android:id="@+id/ll_loan_result_step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px">
                    <TextView
                        android:id="@+id/txt_loan_result_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color333333"
                        android:textSize="30px"
                        android:text="审核中"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_loan_result_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color999999"
                    android:textSize="28px"
                    android:layout_marginTop="15px"
                    android:text="你的借款正在审核中，请耐心等待"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px">
                <TextView
                    android:id="@+id/txt_loan_result_step1_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color333333"
                    android:textSize="30px"
                    android:text="申请提交成功"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_loan_result_apply_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color999999"
                android:textSize="28px"
                android:layout_marginTop="15px"
                android:layout_marginBottom="30px"
                android:text="申请借款1000元，期限7天"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_loan_result_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/shape_home_btn_border"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="30px"
        android:textColor="@color/color_white"
        android:layout_marginRight="20px"
        android:text="确定"/>
</RelativeLayout>
</layout>