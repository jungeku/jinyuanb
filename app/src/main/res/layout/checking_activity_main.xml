<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/checking_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <include layout="@layout/layout_line"/>

    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_property_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:contentDescription="首页"
                android:src="@mipmap/unclick_property"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_detail_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="明细"
                android:layout_marginRight="25px"
                android:src="@mipmap/unclick_detail"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/img_account_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="账本"
                android:src="@mipmap/unclick_account"
                android:scaleType="fitXY" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
</layout>